    PUSHBUTTON      "Delete",IDC_DELETEAVATAR,61,112,45,13,WS_VISIBLE
	
	CONTROL         "Share Avatar",IDC_SHARE_AVATAR,"Button",
                    BS_AUTOCHECKBOX | WS_TABSTOP,16,130,120,10 					
END


